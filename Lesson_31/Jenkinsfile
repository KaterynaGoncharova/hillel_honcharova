pipeline {
    agent any

    environment {
        // Встановіть шлях до вашого Python середовища або використовуйте системний Python
        PYTHON_HOME = '/path/to/your/python'
    }

    stages {
        stage('Checkout') {
            steps {
                // Вилучення коду з репозиторію
                checkout scm
            }
        }

        stage('Install Dependencies') {
            steps {
                // Встановлення залежностей
                script {
                    sh '''
                        ${PYTHON_HOME}/bin/pip install -r requirements.txt
                    '''
                }
            }
        }

        stage('Run Tests') {
            steps {
                // Запуск автотестів
                script {
                    sh '''
                        ${PYTHON_HOME}/bin/python -m unittest discover
                    '''
                }
            }
        }

        stage('Publish Test Results') {
            steps {
                // Публікація результатів тестування у Jenkins
                junit '**/test-*.xml'
            }
        }
    }

    post {
        always {
            // Надсилання електронної пошти з результатами тестування
            emailext (
                to: 'InsertYour@Mail.Here',
                subject: "Jenkins Build ${currentBuild.currentResult}: ${currentBuild.fullDisplayName}",
                body: "Результати тестування:\n\n${currentBuild.fullDisplayName}\n\n${currentBuild.currentResult}",
                attachLog: true
            )
        }
    }
}